<!DOCTYPE html>
<html lang="en">

<!-- Warrant Canary -->
<!-- The FBI has not been here -->

<!-- https://en.wikipedia.org/wiki/Warrant_canary -->

<head>
    <!-- Generic Meta Tags for Search SEO -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Siddes is a social media based around user inteaction and privacy.">
    <meta name="author" content="Siddes Media">

    <!-- Apple Touch Icon (at least 200x200px) -->
    <link rel="apple-touch-icon" href="/img/logo_high_res.png">

    <!-- To run web application in full-screen -->
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">

    <!-- Facebook Open Graph -->
    <meta property="og:type" content="webpage" />
    <meta property="og:title" content="<%= title %>" />
    <meta property="og:description" content="Siddes is a social media based around user inteaction and privacy." />
    <meta property="og:image" content="http://siddes.com/img/logo_high_res.png" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@siddes" />
    <meta name="twitter:creator" content="@mrmemrdev" />

    <title><%- title %></title>

    <!-- Icons and Logos -->
    <link rel="icon" type="image/png" href="/img/favicon.jpg">

    <!-- External Resources -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/flexbox.css" type="text/css"> <!-- Flexbox -->

    <!-- Local Resources -->
    <link rel="stylesheet" href="/css/LineIcons.css">
    <link rel="stylesheet" href="/css/main.css">
    <link id="themelink" rel="stylesheet" href="/css/themes/ocean dark.css">
    <script src="/js/index.js"></script>

    <!-- Meta Tags requred for Progressive Web App -->
    <meta name="apple-mobile-web-app-status-bar" content="#aa7700">
    <meta name="theme-color" content="black">

    <!-- Manifest File link -->
    <link rel="manifest" href="/manifest.json">

    <!-- Service Worker (notifications, pwa, chromium) -->
    <% if(loggedin == true) { %>
    <script src="/js/notifications.js"></script>
    <% } %>
    <script src="/js/loadsw.js"></script>
    <script src="/sw.js"></script>
</head>

<body id="body">
    <section>
        <% if (navbar == true) { %>
        <%- include('partials/top-navbar') %>
        <% } %>
    </section>
    <div class="row">
        <div class="col-xs-3 col-sm-3 col-md-2">
            <header>
                <% if (navbar == true) { %>
                <%- include('partials/left') %>
                <% } else {} %>
            </header>
        </div>
        <div class="col-xs-9 col-sm-6 col-md-8">
            <content>
                <%- include(template) %>
            </content>
        </div>
        <div class="col-xs-hidden col-sm-3 col-md-2">
            <header>
                <% if (navbar == true) { %>
                <%- include('partials/right') %>
                <% } else {} %>
            </header>
        </div>
    </div>
    <footer>
        <% if (footer == true) { %>
        <br>
        <%- include('partials/footer') %>
        <% } else {} %>
    </footer>
    <section>
        <% if (footer == true) { %>
        <%- include('partials/other') %>
        <% } %>
    </section>
    <noscript>
        Make sure Javascript is on for <%= name %> to work.
    </noscript>
    <script>
        updates()
    </script>
</body>

</html>