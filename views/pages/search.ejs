<h1 class="header"><%= searchterm %></h1><br>
<a href="/account/search?q=<%= searchterm %>" class="button linkbutton marleft10">Users</a>
<a href="/tag/<%= searchterm %>" class="button linkbutton">Hashtags</a>
<a href="/search?q=<%= searchterm %>" class="button linkbutton">Search</i></a>
<br><br>
<div id="posts">
    <% if(posts.length == 0) { %>
    <p class="headerred">No posts found for <i><%= searchterm %></i></p>
    <% } else { %>
    <%- include('../partials/posts') %>
    <% } %>
</div>
<div style="display: flex;justify-content: center;" class="postdiv">
    <style>
        .pagination {
            padding-left: 10px;
            padding-right: 10px;
            margin: 5px;
        }
    </style>
    <% if(page == 0) { %>
    <button onclick="window.location='/search/<%= page-1 %>?q=<%= searchterm %>'" disabled
        class="button pagination">...</button>
    <% if (lastpage == true ) { %>
    <button onclick="window.location='/search/<%= eval(page)+1 %>?q=<%= searchterm %>'" class="button pagination"
        disabled>...</button>
    <% } else { %>
    <button onclick="window.location='/search/<%= eval(page)+1 %>?q=<%= searchterm %>'"
        class="button pagination"><%= eval(page)+2 %></button>
    <% } %>
    <% } else if (lastpage == true ) { %>
    <button onclick="window.location='/search/<%= page-1 %>?q=<%= searchterm %>'"
        class="button pagination"><%= page %></button>
    <button onclick="window.location='/search/<%= eval(page)+1 %>?q=<%= searchterm %>'" class="button pagination"
        disabled>...</button>
    <% } else { %>
    <button onclick="window.location='/search/<%= page-1 %>?q=<%= searchterm %>'"
        class="button pagination"><%= page %></button>
    <button onclick="window.location='/search/<%= eval(page)+1 %>?q=<%= searchterm %>'"
        class="button pagination"><%= eval(page)+2 %></button>
    <% } %>
</div>