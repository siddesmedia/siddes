<h1 class="header"><%= searchterm %></h1><br>
<a href="/account/search?q=<%= searchterm %>" class="header">Search users for <i><%= searchterm %></i></a>
<br><br>
<div id="posts">
    <% if(posts.length == 0) { %>
    <p class="headerred">No posts found for <i><%= searchterm %></i></p>
    <% } else { %>
    <% for(var i = 0; i < posts.length; i++) { %>
    <div class="postcontainer">
        <div class="postdiv">
            <div style="cursor: pointer;" onclick="window.location='/s/<%= posts[i]._id %>'">
                <% if (posts[i].approved == true) { %>
                <span class="commentsmeta right">
                    <button type="button" class="postreport">Approved</button>
                </span>
                <% } else { if (posts[i].reported == true) { %>
                <span class="commentsmeta right">
                    <button type="button" class="postreport">Under Review</button>
                </span>
                <% } else { %>
                <span class="commentsmeta right">
                    <button onclick="window.location='/report?post=<%= posts[i]._id %>'" type="button"
                        class="postreport"><a class="nostyle"
                            href="/report?post=<%= posts[i]._id %>">Report</a></button>
                </span>
                <% }} %>
                <p class="postowner">
                    <a class="postownerlink" id="user_<%= i.toString() %>_<%= posts[i]._id %>"
                        href="/account/<%= posts[i].owner %>">
                    </a>
                    <% if(posts[i].repost == 'true') { %>
                    <span class="repostbadge">Repost</span>
                    <% } else {} %>
                </p>
                <p class="postbody" id="post_<%= posts[i]._id %>">
                    <%= posts[i].body %>
                </p>
                <!--<p class="postmeta">
                    <%= posts[i].date.toLocaleString() %>
                </p>-->
            </div>
            <form action="/comment/new" method="POST">
                <input class="postcommentinput" name="body" type="text" style="width:30%" autocomplete="off"
                    required="required" placeholder="Thoughts...">
                <input name="parentid" type="text" style="width:0%" class="hidden" value="<%= posts[i]._id %>"
                    required="required">
                <button type="submit" class="postcomment">Comment</button>
                <button type="button" onclick="window.location='/s/<%= posts[i]._id %>#comments'">See All
                    Comments</button>
                <span class="right">
                    <button
                        onclick="window.location='/account/new?text=<%- encodeURIComponent(posts[i].body) %>&repost=true'"
                        type="button" class="postrepost">Repost</button>
                    <button onclick="like('<%= posts[i]._id %>')" type="button" class="postlike">Like</button>
                </span>
            </form>
        </div>
    </div>
    <script>
        replacepostlinks('post_<%= posts[i]._id %>')
        getusername('user_<%= i.toString() %>_<%= posts[i]._id %>', '<%= posts[i].owner %>')
    </script>
    <% } %>
    <% } %>
</div>