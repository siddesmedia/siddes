<h1 class="header"><%= searchterm %></h1><br>
<a href="/account/search?q=<%= searchterm %>" class="header">Search users for <i><%= searchterm %></i></a>
<br><br>
<div id="posts">
    <% if(posts.length == 0) { %>
    <p class="headerred">No posts found for <i><%= searchterm %></i></p>
    <% } else { %>
    <% for(var i = 0; i < posts.length; i++) { %>
    <div class="postcontainer">
        <div class="postdiv dotted">
            <div style="cursor: pointer;" onclick="window.location='/s/<%= posts[i]._id %>'">
                <% if (posts[i].approved == true) { %>
                <span class="commentsmeta right">
                    <a>Approved</a>
                </span>
                <% } else { %>
                <% if (posts[i].reported == true) { %>
                <span class="commentsmeta right">
                    <a>Under Review</a>
                </span>
                <% } else { %>
                <span class="commentsmeta right">
                    <a href="/report?post=<%= posts[i]._id %>">Report</a>
                </span>
                <% } %>
                <% } %>
                <p class="postowner">@<a class="postownerlink" href="/account/<%= posts[i].owner %>"
                        id='post_<%= i.toString() %>_<%= posts[i]._id %>'><%= posts[i].owner %></a>
                    <% if(posts[i].repost == 'true') { %>
                    <span class="repostbadge">Repost</span>
                    <% } else {} %></p>
                <p class="postbody" id="post_<%= posts[i]._id %>"><%= posts[i].body %></p>
                <p class="postmeta"><%= posts[i].date.toLocaleString() %></p>
            </div>
            <a href="/account/new?text=<%- encodeURIComponent(posts[i].body) %>&repost=true"><button>Repost</button></a>
            <button class="marleft10" onclick="like('<%= posts[i]._id %>')">Like</button>
            <br><br>
            <form action="/comment/new" method="POST">
                <input name="body" type="text" style="width:30%" autocomplete="off" required placeholder="Thought...">
                <input name="parentid" type="text" style="width:0%" class="hidden" value="<%= posts[i]._id %>" required>
                <button type="submit">Comment</button> <button type="button"
                    onclick="window.location='/s/<%= posts[i]._id %>#comments'">Show Comments</button>
            </form>
        </div>
    </div>
    <br>
    <script>
        replacepostlinks("post_<%= posts[i]._id %>")
        getusername('post_<%= i.toString() %>_<%= posts[i]._id %>', '<%= posts[i].owner %>')
    </script>
    <% } %>
    <% } %>
</div>