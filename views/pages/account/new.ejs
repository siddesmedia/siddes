<form action="/post/new" method="POST" class="section" enctype="multipart/form-data">
    <textarea name="body" required class="input" style="width: 100%"><%= text %></textarea><br>
    <input type="file" accept="image/*" class="input" name="image" style="width: 100%;"><br>
    <% if(repost == 'true') { %>
    <input type="text" class="hidden" name="repost" value="true">
    <% } else { %>
    <input type="text" class="hidden" name="repost" value="false">
    <% } %>
    <br>
    <button type="submit" class="button">Post</button>
</form>