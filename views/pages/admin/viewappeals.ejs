<h3 class="header">Suspension Appeals</h3><br>
<% if(users.length == 0) { %>
<h4 class="headerred">No suspended users with appeals</h4>
<% } else { %>
<% for(var i = 0; i < users.length; i++) { %>
<div class="postcontainer">
    <div class="postdiv section">
        <br>
        <a class="section" target="_blank" href="/account/<%= users[i]._id %>">
            @<%= users[i].username %>
        </a>
        <p><b>suspension reason: </b><%= users[i].suspensionreason %></p>
        <p><a target="_blank" href="/account/<%= users[i]._id %>">view account</a></p>
        <button class="button section" onclick="unsuspend('<%= users[i]._id %>')">Unsuspend Account</button>
    </div>
</div>
<% } %>
<% } %>