<h1>@<a href="/<%= username %>"><%= username %></a> is Following <%= user.following.length %> People</h1>
<% for(var i = 0; i < user.following.length; i++) { %>
<div class="postcontainer">
    <div class="postdiv">
        <p class="postowner">@<a class="postownerlink" href="/account/<%= user.following[i] %>"
                id="followingusername<%= i %>"><%= user.following[i] %></a></p>
    </div>
    <hr>
</div>
<script>
    getusername("followingusername" + '<%= i %>', '<%= user.following[i] %>')
</script>
<% } %>