<div>
    <form action="/signup" method="POST">
        <h1>Signup</h1>
        <div>
            <label for="username">Username</label>
            <input type="username" id="username" name="username" placeholder="Enter Name" value="" required />
        </div>
        <br>
        <div>
            <label for="email">Email</label>
            <input type="email" id="email" name="email" placeholder="Enter Email" value="" required />
        </div>
        <br>
        <div>
            <label for="password">Password</label>
            <input type="password" id="password" name="password" placeholder="Create Password" value="" required />
        </div>
        <br>
        <div>
            <label for="password2">Confirm Password</label>
            <input type="password" id="password2" name="password2" placeholder="Confirm Password" value="" required />
        </div>
        <div>
            <p>
                <input type="checkbox" required checked>
                I am over 13 years old and agree to the <a>Terms of
                    Service</a> and <a>Privacy Policy</a>.
            </p>
        </div>
        <button type="submit">Register</button>

        <p>Have an account? <a href="/login">Login</a></p>
    </form>
</div>