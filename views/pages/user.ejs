<% if(user.displayname == "") { %>
<h2><span><%- user.displayname %></span></h2>
<h3>@<span><%- user.username %></span></h3>
<% } else { %>
<h2>@<span><%- user.username %></span></h2>
<% } %>
<p><b>Bio: </b><span><%- user.description %></span></p>
<h2>Posts:</h2>
<div id="posts">
    <hr>
    <% for(var i = 0; i < posts.length; i++) { %>
    <div class="postdiv" style="cursor: pointer;" onclick="window.location='/s/<%- posts[i]._id %>'">
        <p class="postowner">@<a class="postownerlink" href="/<%- user.username %>"><%= user.username %></a></p>
        <p class="postbody"><%= posts[i].body %></p>
        <p class="postmeta"><%= posts[i].date.toLocaleString() %></p>
        <hr>
    </div>
    <% } %>
</div>